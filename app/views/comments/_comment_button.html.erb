<%= form_with(model: comments, local: true) do |f| %>
  <div class="form-group">
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
  </div>
  
    <%= f.submit 'コメント', class: 'btn btn-primary btn-block' %>
<% end %>

<% @comments.each do |comment| %>
<%= comment.user.name %>
<%= comment.content %>
<% end %>
