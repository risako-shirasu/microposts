<p>検索</p>
<%= form_tag(search_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

<ul><% @microposts.each do |micropost| %>
  <li>
    <%= link_to micropost.title, micropost %>
    <%= post.created_at %>
    <%= post.status %>
  </li>
</ul>